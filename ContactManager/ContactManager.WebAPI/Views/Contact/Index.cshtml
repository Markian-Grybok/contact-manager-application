@model IEnumerable<ContactResponse>

@{
    ViewData["Title"] = "Contacts";
}

<h1>List Contacts</h1>

<p>
    <a asp-action="Upload" class="btn btn-primary">Upload New</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        <p>No contacts found.</p>
    </div>
}
else
{
    <div class="mb-3">
        <input 
            type="text" 
            id="searchInput" 
            class="form-control" 
            placeholder="Search..." />
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="contactsTable">
            <thead>
                <tr>
                    <th style="cursor: pointer;">
                        @Html.DisplayNameFor(model => model.First().Id)
                        <span class="sort-indicator"></span>
                    </th>
                    <th style="cursor: pointer;">
                        @Html.DisplayNameFor(model => model.First().Name)
                        <span class="sort-indicator"></span>
                    </th>
                    <th style="cursor: pointer;">
                        @Html.DisplayNameFor(model => model.First().DateOfBirth)
                        <span class="sort-indicator"></span>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Married)
                    </th>
                    <th style="cursor: pointer;">
                        @Html.DisplayNameFor(model => model.First().Phone)
                        <span class="sort-indicator"></span>
                    </th>
                    <th style="cursor: pointer;">
                        @Html.DisplayNameFor(model => model.First().Salary)
                        <span class="sort-indicator"></span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                        <td>@Html.DisplayFor(modelItem => item.Married)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/contacts.js"></script>
}